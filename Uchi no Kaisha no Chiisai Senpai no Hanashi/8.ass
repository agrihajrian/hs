Dialogue: 0,0:00:02.23,0:00:05.73,Utama,Hayakawa,0,0,0,,Pengen libur, pengen jalan-jalan!
Dialogue: 0,0:00:05.73,0:00:08.73,Utama,Hayakawa,0,0,0,,Pengen ke kolam air panas ....
Dialogue: 0,0:00:08.73,0:00:12.61,Utama,Shinozaki,0,0,0,,Libur? Kan baru habis libur tahun baru.
Dialogue: 0,0:00:12.61,0:00:16.00,Utama,Hayakawa,0,0,0,,Libur Tahun Baru cuma sibuk pergi silahturahmi!
Dialogue: 0,0:00:16.00,0:00:17.76,Utama,Hayakawa,0,0,0,,Liburnya harus dipanjangin!
Dialogue: 0,0:00:17.76,0:00:18.87,Utama,Shinozaki,0,0,0,,Santai, dong.
Dialogue: 0,0:00:18.87,0:00:22.87,Utama,Hayakawa,0,0,0,,Kamu dan Katase-san ingin menenangkan diri di kolam air panas, 'kan?
Dialogue: 0,0:00:23.59,0:00:26.89,Utama,Hayakawa,0,0,0,,Di bawah langit cerah,\N dikelilingi keindahan alam nan asri ....
Dialogue: 0,0:00:26.89,0:00:29.85,Utama,Hayakawa,0,0,0,,Diiringi oleh kicau burung \Ndan suara deras air sungai,
Dialogue: 0,0:00:29.85,0:00:32.88,Utama,Hayakawa,0,0,0,,menenangkan diri dalam rendaman air panas ....
Dialogue: 0,0:00:32.88,0:00:36.36,Utama,Shiori,0,0,0,,Nirwana para pekerja kantoran!
Dialogue: 0,0:00:36.36,0:00:39.06,Miring,Shinozaki,0,0,0,,Hati Senior berhasil direbut!
Dialogue: 0,0:00:39.44,0:00:42.77,Utama,Hayakawa,0,0,0,,Bukan menghangatkan tubuh,\Ntapi aku ingin menghangatkan batinku.
Dialogue: 0,0:00:42.77,0:00:46.06,Utama,Shiori,0,0,0,,Aku paham! Aku paham, Hayakawa-san!
Dialogue: 0,0:00:46.63,0:00:49.57,Utama,Shiori,0,0,0,,Dan mungkin di penginapannya memelihara kucing ....
Dialogue: 0,0:00:49.57,0:00:54.27,Utama,Shiori,0,0,0,,Terbebas dari rimba beton penuh\N sinar biru perusak mata ....
Dialogue: 0,0:00:54.27,0:00:57.82,Miring,Shinozaki,0,0,0,,Gawat! Senior tak bisa berhenti ngehalu!
Dialogue: 0,0:00:57.82,0:01:00.12,Utama,Hayakawa,0,0,0,,Janji mau pergi akhir bulan nanti?
Dialogue: 0,0:01:00.12,0:01:02.08,Utama,Hayakawa,0,0,0,,Kita ambil cuti!
Dialogue: 0,0:01:02.08,0:01:04.46,Utama,Shiori,0,0,0,,Ide bagus, ide bagus!
Dialogue: 0,0:01:04.46,0:01:06.04,Utama,Hayakawa,0,0,0,,Kamu juga mau ikut, Shinozaki?
Dialogue: 0,0:01:06.72,0:01:08.78,Utama,Shinozaki,0,0,0,,Kok aku harus ikutan juga?
Dialogue: 0,0:01:08.78,0:01:11.96,Utama,Hayakawa,0,0,0,,Kamu ingin melihat kesegaran Senior\N sehabis mandi, 'kan?
Dialogue: 0,0:01:13.19,0:01:16.57,Utama,Shiori,0,0,0,,Aku baru saja mandi.
Dialogue: 0,0:01:16.97,0:01:19.67,Utama,Shinozaki,0,0,0,,Aku bukannya tidak mau, sih ....
Dialogue: 0,0:01:19.67,0:01:22.52,Utama,Shinozaki,0,0,0,,Tapi kalau aku ikut cuti, nanti pekerjaannya ....
Dialogue: 0,0:01:22.52,0:01:23.82,Utama,Akina,0,0,0,,Pergi saja.
Dialogue: 0,0:01:24.23,0:01:25.76,Utama,Shinozaki,0,0,0,,Manajer!
Dialogue: 0,0:01:25.76,0:01:27.73,Utama,Akina,0,0,0,,Kebetulan sekarang belum masa-masa sibuk.
Dialogue: 0,0:01:27.73,0:01:30.81,Utama,Akina,0,0,0,,Jatah cuti juga harus dimanfaatkan, ya.
Dialogue: 0,0:01:30.81,0:01:32.86,Utama,Shiori/Hayakawa,0,0,0,,Terima kasih!
Dialogue: 0,0:01:33.24,0:01:36.03,Utama,Shinozaki,0,0,0,,Kalau begitu, kau mau ikut juga, Manajer?
Dialogue: 0,0:01:36.57,0:01:37.66,Utama,Akina,0,0,0,,Aku?
Dialogue: 0,0:01:37.66,0:01:39.66,Utama,Shinozaki,0,0,0,,Aku canggung kalau cowoknya aku doang ....
Dialogue: 0,0:01:40.04,0:01:42.96,Utama,Shiori,0,0,0,,Benar juga! Ayo kita pergi bersama-sama!
Dialogue: 0,0:01:42.96,0:01:45.48,Utama,Shiori,0,0,0,,Berempat dijamin lebih seru, loh.
Dialogue: 0,0:01:45.48,0:01:47.08,Utama,Shiori,0,0,0,,Iya, Hayakawa-san?
Dialogue: 0,0:01:47.08,0:01:49.67,Utama,Hayakwa,0,0,0,,Yah, aku enggak masalah.
Dialogue: 0,0:01:50.39,0:01:53.42,Utama,Akina,0,0,0,,Liburan ke kolam air panas bersama-sama ....
Dialogue: 0,0:01:53.84,0:01:54.99,Utama,Shinozaki,0,0,0,,Senior ....
Dialogue: 0,0:01:54.99,0:01:56.39,Utama,Shjiori,0,0,0,,Shinozaki-san ....
Dialogue: 0,0:01:57.08,0:01:58.33,Utama,Shinozaki,0,0,0,,Hayakawa ....
Dialogue: 0,0:01:58.33,0:02:00.14,Utama,Hayakwa,0,0,0,,Sh-Shinozaki ....
Dialogue: 0,0:02:00.64,0:02:02.03,Utama,Shiori,0,0,0,,Hayakawa-san!
Dialogue: 0,0:02:02.03,0:02:03.43,Utama,Hayakawa,0,0,0,,Katase-san!
Dialogue: 0,0:02:06.48,0:02:08.97,Utama,Akina,0,0,0,,Pasti seru banget, ya!
Dialogue: 0,0:02:08.97,0:02:09.88,Utama,Hayakawa,0,0,0,,Tunggu dulu!
Dialogue: 0,0:02:09.88,0:02:12.39,Utama,Shiori,0,0,0,,Jangan berpikir macam-macam!
Dialogue: 0,0:03:53.15,0:03:55.91,Utama,Shiori,0,0,0,,Penginapan yang bagus, ya.
Dialogue: 0,0:03:55.91,0:03:59.91,Utama,Hayakawa,0,0,0,,Padahal biasanya jam-jam segini lagi sibuk di kantor!
Dialogue: 0,0:03:59.91,0:04:02.34,Utama,Hayakawa,0,0,0,,Terima kasih, cuti!
Dialogue: 0,0:04:02.34,0:04:04.43,Utama,Akina,0,0,0,,Aku mendaftarkan nama kita dulu, ya.
Dialogue: 0,0:04:04.43,0:04:06.42,Utama,Hayakawa,0,0,0,,Ah, silakan.
Dialogue: 0,0:04:06.74,0:04:10.88,Utama,Shinozaki,0,0,0,,Maaf, Manajer, bukan hanya memesankan penginapan, tapi juga memberi kami tumpangan.
Dialogue: 0,0:04:10.88,0:04:13.92,Utama,Akina,0,0,0,,Tidak apa-apa, toh ini memang kemauanku.
Dialogue: 0,0:04:13.92,0:04:16.77,Utama,Akina,0,0,0,,Katase-san juga mau bergantian menyetir.
Dialogue: 0,0:04:16.77,0:04:19.57,Utama,Shinozaki,0,0,0,,Aku terkejut Senior bisa menyetir.
Dialogue: 0,0:04:20.27,0:04:22.65,Utama,Shinozaki,0,0,0,,Aku coba ujian SIM tahun ini, deh.
Dialogue: 0,0:04:23.24,0:04:24.18,Utama,Akina,0,0,0,,Bagus.
Dialogue: 0,0:04:24.18,0:04:27.84,Utama,Akina,0,0,0,,Berarti lain kali, dia bisa duduk di samping sopir.
Dialogue: 0,0:04:27.84,0:04:30.37,Utama,Shinozaki,0,0,0,,A-Aku tidak--
Dialogue: 0,0:04:31.19,0:04:33.04,Utama,Shinozaki,0,0,0,,Itu suara Senior!
Dialogue: 0,0:04:33.04,0:04:35.20,Utama,Shinozaki,0,0,0,,A-Apa terjadi sesuatu?!
Dialogue: 0,0:04:36.45,0:04:38.20,Utama,Shinozaki,0,0,0,,Kau baik-baik saja, Senior?!
Dialogue: 0,0:04:42.20,0:04:45.59,Utama,Shiori,0,0,0,,Surga meong-meong lembut ....
Dialogue: 0,0:04:45.59,0:04:47.71,Utama,Shinozaki,0,0,0,,{\i1}Jeritan kebahagiaan, toh.
Dialogue: 0,0:04:47.71,0:04:50.51,Utama,Akina,0,0,0,,Katanya penginapan yang memelihara kucing itu penginapan bagus ....
Dialogue: 0,0:04:50.51,0:04:51.96,Utama,Shiori,0,0,0,,Manajer hebat!
Dialogue: 0,0:04:52.31,0:04:54.21,Utama,Shiori,0,0,0,,Sini, sini!
Dialogue: 0,0:04:54.21,0:04:56.67,Utama,Shiori,0,0,0,,Kemarilah!
Dialogue: 0,0:05:00.38,0:05:02.47,Miring,Shinozaki,0,0,0,,Langsung diacuhin telak!
Dialogue: 0,0:05:02.47,0:05:05.54,Utama,Akina,0,0,0,,Apa mereka menghindarinya karena merasa satu ras?
Dialogue: 0,0:05:05.54,0:05:07.27,Utama,Shinozaki,0,0,0,,{\i1}Senior jadi ras kucing?!
Dialogue: 0,0:05:07.79,0:05:13.02,Utama,Shinozaki,0,0,0,,{\i1}Aku memang belum pernah \Nmelihat Senior mengelus kucing ....
Dialogue: 0,0:05:13.56,0:05:15.15,Utama,Shinozaki,0,0,0,,Bagaimana menurutmu, Hayakawa?
Dialogue: 0,0:05:15.15,0:05:17.15,Utama,Hayakawa,0,0,0,,Kamu meong apa, Shinozaki?
Dialogue: 0,0:05:17.15,0:05:18.55,Utama,Shinozaki,0,0,0,,Menara kucing?!
Dialogue: 0,0:05:18.55,0:05:21.78,Utama,Shinozaki,0,0,0,,Memang tubuh Hayakawa mengandung catnip?!
Dialogue: 0,0:05:25.35,0:05:28.63,Utama,Hayakawa,0,0,0,,Aku pernah dengar ada kolam renang air panas ....
Dialogue: 0,0:05:28.63,0:05:30.29,Utama,Hayakawa,0,0,0,,Tapi ini lumayan luas, ya!
Dialogue: 0,0:05:30.29,0:05:33.14,Utama,Akina,0,0,0,,Bagus, 'kan?\NBisa berenang di tengah musim dingin!
Dialogue: 0,0:05:33.14,0:05:34.71,Utama,Akina,0,0,0,,Ayo berenang sepuasnya!
Dialogue: 0,0:05:35.07,0:05:39.23,Utama,Shinozaki,0,0,0,,{\i1}Aku tak menyangka bisa melihat Senior memakai baju renang di tengah musim dingin!
Dialogue: 0,0:05:39.23,0:05:40.97,Utama,Shinozaki,0,0,0,,{\i1}Terima kasih, Manajer!
Dialogue: 0,0:05:42.79,0:05:46.98,Utama,Shinozaki,0,0,0,,{\i1}Baju renang Senior ... apa imut-imut, ya?
Dialogue: 0,0:05:49.11,0:05:51.20,Utama,Shinozaki,0,0,0,,{\i1}Atau anggun?
Dialogue: 0,0:05:52.98,0:05:54.56,Utama,Shinozaki,0,0,0,,{\i1}Atau mungkin ....
Dialogue: 0,0:05:55.58,0:05:57.36,Utama,Hayakawa,0,0,0,,Katase-san, di sini!
Dialogue: 0,0:05:57.75,0:05:59.86,Utama,Shiori,0,0,0,,Maaf lama.
Dialogue: 0,0:06:07.35,0:06:09.85,Utama,Shinozaki,0,0,0,,{\i1}Baju renang dewasa?!
Dialogue: 0,0:06:10.33,0:06:13.33,Utama,Shinozaki,0,0,0,,{\i1}Gawat! Senior hanyalah Senior di kantorku!
Dialogue: 0,0:06:13.60,0:06:16.24,Utama,Shinozaki,0,0,0,,{\i1}Tetap tenang! Tahan pikiran jorokmu!
Dialogue: 0,0:06:16.24,0:06:19.34,Utama,Shinozaki,0,0,0,,{\i1}Lalu berikan pujian senatural mungkin ....
Dialogue: 0,0:06:19.34,0:06:21.34,Utama,Akina,0,0,0,,Kalian berdua terlihat cocok.
Dialogue: 0,0:06:21.34,0:06:23.31,Utama,Shiori,0,0,0,,Terima kasih.
Dialogue: 0,0:06:23.31,0:06:24.35,Utama,Hayakawa,0,0,0,,Makasih ....
Dialogue: 0,0:06:24.35,0:06:25.60,Utama,Shinozaki,0,0,0,,{\i1}Manajer!
Dialogue: 0,0:06:25.60,0:06:27.85,Utama,Shinozaki,0,0,0,,{\i1}Kok bisa gampang banget!
Dialogue: 0,0:06:28.78,0:06:31.60,Utama,Shinozaki,0,0,0,,{\i1}Aku harus bilang apa?!
Dialogue: 0,0:06:32.41,0:06:34.37,Utama,Shinozaki,0,0,0,,{\an8}Memang terlihat cocok.
Dialogue: 0,0:06:38.78,0:06:41.79,Utama,Shiori,0,0,0,,Te-Terima kasih ....
Dialogue: 0,0:06:42.28,0:06:43.78,Utama,Shinozaki,0,0,0,,{\i1}Ditutupin?!
Dialogue: 0,0:06:43.78,0:06:46.53,Utama,Shiori,0,0,0,,{\i1}A-Aku jadi baper!
Dialogue: 0,0:06:46.99,0:06:51.79,Utama,Shinozaki,0,0,0,,{\i1}Padahal sudah di kolam renang, \Nmasa tidak bisa melihat baju renang Senior ....
Dialogue: 0,0:06:52.31,0:06:54.78,Utama,Shinozaki,0,0,0,,{\i1}Apa mending jujur minta kepadanya?
Dialogue: 0,0:06:55.26,0:06:57.80,Utama,Shinozaki,0,0,0,,{\i1}Tidak, itu pelecehan.
Dialogue: 0,0:07:01.39,0:07:04.27,Utama,Hayakwa,0,0,0,,Oh ya, dari mana kamu dapat ban itu?
Dialogue: 0,0:07:04.27,0:07:06.32,Utama,Akina,0,0,0,,Aku baru saja membelinya.
Dialogue: 0,0:07:06.32,0:07:07.39,Utama,Hayakawa,0,0,0,,Cekatan juga.
Dialogue: 0,0:07:08.83,0:07:12.56,Utama,Hayakawa,0,0,0,,Manajer, ayo pakai ban itu ke kolam mengalir itu.
Dialogue: 0,0:07:12.56,0:07:13.91,Utama,Akina,0,0,0,,{\an8}Bagus!
Dialogue: 0,0:07:13.21,0:07:14.72,Utama,Shinozaki,0,0,0,,Kolam mengalir?
Dialogue: 0,0:07:13.91,0:07:14.72,Utama,Hayakawa,0,0,0,,{\an8}Buruan, buruan!
Dialogue: 0,0:07:14.72,0:07:15.44,Utama,Akina,0,0,0,,{\an8}Iya!
Dialogue: 0,0:07:15.44,0:07:19.54,Utama,Shinozaki,0,0,0,,{\an8\i1}Benar juga! Dia pasti menunjukkan baju renangnya pas nyebur ke kolam renang!
